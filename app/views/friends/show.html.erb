<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead">
    <%= @friend.email %> <br>
    <%= @friend.phone %> <br>
    <%= @friend.facebook %> 
  </p>
  
  <p class="lead">
    <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-primary" %> 
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %>
    <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
  </p>
</div>

