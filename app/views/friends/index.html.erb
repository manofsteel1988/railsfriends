
<% if user_signed_in? %>
<h1>Friends List</h1>
<br>
<table class="table table table-striped table-bordered table-hover">
  <thead class ="table-primary">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Facebook</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend  %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.facebook %></td>
        <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-primary" %>
<% else %>
<h1>Hello world!</h1>
<p>This is my first webpage in Ruby.....YES!!!!</p>

<% end %>